<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partial/head') %>
</head>
<body>
  <%- include('partial/adminNavbar.ejs') %> 
  <h1>List of Authors</h1>
  <br><br>
  <div class="this">
    <div style="margin-bottom: 10px;">
      <a href="/authors/add"><button type="button" class="btn btn-primary">Add New Author</button></a>
      <a href="/authors/addBook"><button type="button" class="btn btn-primary">Add New Book</button></a>
    </div>
    <table class="table table-bordered">
      <thead class="thead-light">
        <th>NAME</th>
        <th>AGE</th>
        <th>LIST OF BOOKS</th>
      </thead>
      <tbody>
        <% result.forEach((el) => { %>
          <tr>
            <td><%= el.fullName %> </td>
            <td><%= el.age %> </td>
            <td><a href="/authors/<%= el.id %>">Books List</a></td>
          </tr>
        <% }) %> 
      </tbody>
    </table>
  </div>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partial/head') %> 
</head>
<body>
  <%- include('partial/adminAddEditNavbar') %> 
  <h1>Add New Book</h1>
  <form action="/authors/addBook" method="post" style="margin-left: auto;margin-right: auto;">
    <div>
      <label for="">Title</label><br>
      <input type="text" name="title">
    </div>
    <br>
    <div>
      <label for="">Author</label><br>
      <select name="AuthorId" id="">
        <option value="" disabled selected>--SELECT AUTHOR--</option>
        <% result.forEach((el) => { %>
          <option value="<%= el.id %> "><%= el.fullName %> </option>
        <% }) %> 
      </select>
    </div>
    <br>
    <div>
      <label for="">Genre</label><br>
      <input type="text" name="genre">
    </div>
    <br>
    <div>
      <label for="">Release Year</label><br>
      <input type="text" name="released_year">
    </div>
    <br>
    <button type="submit">Add Book</button>
  </form>
  <%- include('partial/errors.ejs') %> 
</body>
</html>
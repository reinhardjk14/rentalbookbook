<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partial/head') %>
</head>
<body>
  <%- include('partial/adminNavbar.ejs') %>
  <h1>List Book Per Author</h1>
  <br>
  <div class="this">
    <a href="/authors"><button type="button" class="btn btn-primary" style="margin-bottom: 10px;">List Author</button></a>
    <table class="table table-bordered">
      <thead class="thead-light">
        <th>TITLE</th>
        <th>GENRE</th>
        <th>RELEASE YEAR</th>
        <th>ACTION</th>
      </thead>
      <tbody>
        <% result.Books.forEach((el) => { %>
          <tr>
            <td><%= el.title %> </td>
            <td><%= el.genre %> </td>
            <td><%= el.released_year %> </td>
            <td>
              <a href="/authors/<%= el.id %>/edit" style="text-decoration: none; color: teal; background-color: aliceblue;">EDIT</a>
              <a href="/authors/<%= el.id %>/delete" style="text-decoration: none; color: brown; background-color: antiquewhite;">DELETE</a>
            </td>
          </tr>
        <% }) %> 
      </tbody>
    </table>
  </div>
  <br>
</body>
</html>